        flex-direction: column;
    }

    .article__items {
        border: 1px solid black;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .search__bar {
        border: 1px solid black;
        width: 100%;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;

    }

    .trends__header {
        padding: 10px;
        text-align: center;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
    }

    .trends__lists {
        border: 1px solid black;
