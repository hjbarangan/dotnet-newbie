@{
    ViewData["Title"] = "News";
}
@model List<NewsArticle>

<div class="explore__page">


    <div class="search__bar">
        <input type="text">
    </div>
    <div class="trends__header">
        <h2>Trends for you</h2>
    </div>

    <div class="trends__lists">
        <div class="trends__items">
            <div class="trends__items--hashtags">
                <p>#RE-ORG??</p>
            </div>
            <div class="trends__items--count">
                <p>1,430 posts</p>
            </div>
        </div>

        <div class="trends__items">
            <p>#byebiot3ch</p>
            <p>1,430 posts</p>
        </div>
    </div>

    <div class="article__container">
        <div class="article__header">
            <h3>Top Headlines</h3>
        </div>


        <div class="article__items">
            @foreach (var article in Model)
            {
                <div class="article__item--header">
                    <h4>@article.Title</h4>
                    <p>@article.Description</p>
                </div>

                @if (article.UrlToImage != null)
                {
                    <div class="article__item--image">
                        <img src="@article.UrlToImage" alt="@article.Title" />
                    </div>
                }
                <div class="article__item--url">

                    <a href="@article.Url">Read More</a>
                </div>
                <br />
            }
        </div>


    </div>
</div>
<style>
    * {
        color: #fff;
    }

    .explore__page {
        background-color: #15202b
    }

    .article__header {
        border: 1px solid black;
